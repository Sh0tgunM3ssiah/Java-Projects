import javax.swing.JOptionPane;

public class Flooring

{
    public static void main(String[] args)
    {
        String OutputStr1, OutputStr2, OutputStr3, OutputStr4, OutputStr5;
        int num;
        
    OutputStr1 =
        JOptionPane.showInputDialog
        ("This program ask the user to enter a choice of flooring for a new home" + "\n" + "Enter the number that matches your flooring choice:" + "\n" + "\n" + "1: Scored Concrete: Costs $3000" + "\n" + "\n" + "2: Carpeting comes with $5000 allowance" + "\n" + "\n" + "3: Wood floors in the living area," + "\n" + "carpeting in the bedrooms, tile in the bath areas," + "\n" + "and a $5000 carpet allowance, totalling $10,000");
    
        num = Integer.parseInt(OutputStr1);
        
        switch (num)
        {
            case 1:
                OutputStr2 = "You chose selection 1: Scored concrete, costs $3000";
                JOptionPane.showMessageDialog(null, OutputStr2, "Flooring Program", JOptionPane.INFORMATION_MESSAGE);
                break;
            case 2:
                OutputStr3 = "You chose selection 2: Carpeting; comes with $5000 allowance";
                JOptionPane.showMessageDialog(null, OutputStr3, "Flooring Program", JOptionPane.INFORMATION_MESSAGE);
                break;
            case 3:
                OutputStr4 = "You chose selection 3: Wood floors in the living area," + "\n" + "carpeting in the bedrooms, tile in the bath areas," + "\n" + "and a $5000 carpet allowance, totalling $10,000";
                JOptionPane.showMessageDialog(null, OutputStr4, "Flooring Program", JOptionPane.INFORMATION_MESSAGE);
                break;
            default:
                OutputStr5 = "Invalid Number Entry";
                JOptionPane.showMessageDialog(null, OutputStr5, "Flooring Program", JOptionPane.INFORMATION_MESSAGE);
                break;
        }
    }
}
